#!/bin/bash

# Run Ruby RSpec tests
echo "üíé Running Ruby RSpec tests..."
echo "=============================="

cd "$(dirname "$0")/.."

if ! command -v bundle &> /dev/null; then
    echo "Error: Bundler is not installed"
    echo "Install with: gem install bundler"
    exit 1
fi

bundle exec rspec

if [ $? -eq 0 ]; then
    echo "‚úÖ All Ruby tests passed!"
else
    echo "‚ùå Some Ruby tests failed"
    exit 1
fi