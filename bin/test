#!/bin/bash

# Run Rust tests
echo "ü¶Ä Running Rust tests..."
echo "========================"

cd "$(dirname "$0")/.."

if ! command -v cargo &> /dev/null; then
    echo "Error: Rust/Cargo is not installed"
    echo "Install Rust from: https://rustup.rs/"
    exit 1
fi

cargo test "$@"

if [ $? -eq 0 ]; then
    echo "‚úÖ All Rust tests passed!"
else
    echo "‚ùå Some Rust tests failed"
    exit 1
fi